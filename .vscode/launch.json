{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Main App",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}${pathSeparator}app${pathSeparator}runPowershellGui.py",
            "cwd": "${fileDirname}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}${pathSeparator}${env:PYTHONPATH}",
                "PYTHONDONTWRITEBYTECODE": "1"
            },
            "justMyCode": false,
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${fileDirname}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}${pathSeparator}${env:PYTHONPATH}",
                "PYTHONDONTWRITEBYTECODE": "1" // Prevents __pycache__ folders...
            },
            // "args": [
            //     "..\\build_vs\\Debug\\app\\raven.map",
            //     ".\\memmap\\ravenMemMap.html",
            // ],
            "justMyCode": false,
        },
    ]
}
